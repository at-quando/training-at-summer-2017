<h1>View all users</h1>

<table class="col-md-8 col-md-offset-2">
	<tr>
		<th>Avatar</th>
		<th>Email</th>
		<th>Full Name</th>
		<th>Username</th>
	</tr>
	<% @users.each do |user| %>
	<tr>
		<td><%= image_tag user.image.url(:small), class: "mini-picture" %></td>
		<td><%= user.email %></td>
		<td><%= user.name %></td>
		<td><%= user.user_name %></td>
	</tr>
	<% end %>	
</table>



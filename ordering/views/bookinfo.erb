<div>
		<div class="container">
			<div class="image-part">
				<image src="/<%= @book['image'] %>" class="image-custom"></image>
				<p class="price-custom">Price</p>
			</div>
			<div class="remaining-part">
				<div class="remaining-info-part"><h1><%= @book['name'] %></h1><br>
					<i><%= @book['author'] %> </i>
				</div >
				<div class="remaining-cart-part">
					<div class="cart-left-part">
						<span><b>Hotline</b> 123456789</span><br>
						<span><b>Provided</b> by book & Ordering</span>
					</div>
					<div class="cart-right-part">
						<button class="btn btn-sm btn-primary" onclick="displayform()">
							<img src="/images/cart.png" style="width:10%; ">
							<span>ADD TO CART</span>
						</button>
					</div>
				</div>
				</div>
				<div>
						<form id="form-cart" class="custom-form-cart" action="/order/<%= @book['id']%>" method="POST">
							<label>Quantity:</label>
							<input type="text" name="quantity">
							<b>Choose user:</b><br>
							<% @users.each do |users| %>
								<input type="radio" name="username" value="<%=users['username']%>"> <%= users['username']%></input><br>
							<% end %>
							<button type="submit" >SUBMIT</button>
						</form>
					</div>
			</div>
		</div>
		<div class="container" style="margin-top: 20px">
		 	<p><%= @book['description'] %></p>
		</div>
</div>
<script type="text/javascript">
	function displayform()
	{
		var formTag= document.getElementById("form-cart");
		formTag.style.display = 'block'; 
	}
</script>